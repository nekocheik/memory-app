{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": false,  // Désactivé pour forcer une meilleure vérification des types externes
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "noImplicitAny": true,  // Interdiction de l'utilisation implicite de `any`
    "strictNullChecks": true,  // Vérification stricte des types null/undefined
    "noImplicitThis": true,  // Vérifie `this` non implicites
    "typeRoots": [
      "./node_modules/@types",
      "./src/Types/**/*"  // Include all files in the Types directory
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.d.ts"  // Inclusion des fichiers de définition de types
  ],
  "exclude": [
    "node_modules"
  ]
}
